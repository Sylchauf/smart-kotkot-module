{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./",
    "outDir": "build",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false
  },
  "include": ["./server/**/*.js", "server"],
  "exclude": ["node_modules"]
}
